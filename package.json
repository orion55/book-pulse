{
  "name": "book-pulse",
  "description": "Программа для отслеживание новых книг",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/orion55/book-pulse.git"
  },
  "keywords": [
    "синхронизация",
    "книги"
  ],
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "copy-settings": "cpx \"src/books.txt\" dist/",
    "copy-migrations": "cpx \"prisma/migrations/**/*\" dist/migrations",
    "copy-env": "cpx .env.production dist/ && ren dist\\.env.production .env",
    "build": "npm run clean && ncc build src/index.ts -o dist -m -s -a && npm run copy-settings && npm run copy-migrations && npm run copy-env",
    "dev": "npx tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "run": "ncc run src/index.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/ansi-colors": "^3.2.6",
    "@types/node": "^20.17.27",
    "@vercel/ncc": "^0.38.3",
    "cpx": "^1.2.1",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "ansi-colors": "^4.1.3",
    "cfonts": "^3.3.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "winston": "^3.17.0"
  }
}
