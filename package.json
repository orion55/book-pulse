{
  "name": "book-pulse",
  "description": "Программа для отслеживание новых книг",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/orion55/book-pulse.git"
  },
  "keywords": [
    "синхронизация",
    "книги"
  ],
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "npx tsx src/index.ts",
    "clean": "rimraf dist",
    "copy-config": "cpy \"src/config.yml\" dist/",
    "copy-config:linux": "cpy ./src/config.yml dist/",
    "copy-dev-db": "cpy \"prisma/dev.db\" dist/",
    "copy-env": "cpy .env.production dist/ && move-file dist/.env.production dist/.env",
    "move-engine": "cpy dist\\client\\query_engine-windows.dll.node dist\\ && rmdir /s /q dist\\client",
    "prepublishOnly": "npm run build",
    "migrate": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset --force",
    "post-build:win": "npm run migrate:reset && npm run copy-config && npm run copy-dev-db && npm run copy-env && npm run move-engine",
    "post-build:linux": "npm run migrate:reset && npm run copy-config:linux && npm run copy-dev-db && npm run copy-env",
    "build:win": "npm run clean && ncc build src/index.ts -o dist -m --external .prisma/client && npm run post-build:win",
    "build:linux": "npm run clean && ncc build src/index.ts -o dist -m --external .prisma/client && npm run post-build:linux"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/ansi-colors": "^3.2.6",
    "@types/node": "^20.19.7",
    "@vercel/ncc": "^0.38.3",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^6.11.1",
    "@prisma/client": "^6.11.1",
    "ansi-colors": "^4.1.3",
    "cfonts": "^3.3.0",
    "cheerio": "^1.1.0",
    "dotenv": "^16.6.1",
    "move-file-cli": "^3.0.0",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0",
    "yaml": "^2.8.0"
  }
}
