{
  "name": "book-pulse",
  "description": "Программа для отслеживание новых книг",
  "version": "1.1.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/orion55/book-pulse.git"
  },
  "keywords": [
    "синхронизация",
    "книги"
  ],
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "npx tsx src/index.ts",
    "generate-clients": "npx prisma generate",
    "clean": "rimraf dist",
    "copy-config": "cpy src/config.yml dist --flat",
    "copy-dev-db": "cpy prisma/dev.db dist --flat",
    "copy-env": "cpy .env.production dist --flat && move-file dist/.env.production dist/.env",
    "move-engine:win": "cpy dist/client/query_engine-windows.dll.node dist --flat && rimraf dist/client",
    "move-engine:linux": "cpy dist/client/libquery_engine-debian-openssl-3.0.x.so.node dist --flat && rimraf dist/client",
    "prepublishOnly": "npm run build",
    "migrate": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset --force",
    "post-build:win": "npm run migrate:reset && npm run copy-config && npm run copy-dev-db && npm run copy-env && npm run move-engine:win",
    "post-build:linux": "npm run copy-env && npm run move-engine:linux",
    "build:win": "npx prisma generate && npm run clean && ncc build src/index.ts -o dist -m --external .prisma/client && npm run post-build:win",
    "build:linux": "npx prisma generate && npm run clean && ncc build src/index.ts -o dist --external .prisma/client && npm run post-build:linux"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ansi-colors": "^3.2.6",
    "@types/node": "^20.19.25",
    "@vercel/ncc": "^0.38.4",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "3.7.4",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "ansi-colors": "^4.1.3",
    "cfonts": "^3.3.1",
    "cheerio": "^1.1.2",
    "dotenv": "^16.6.1",
    "move-file-cli": "^3.0.0",
    "telegraf": "^4.16.3",
    "winston": "^3.19.0",
    "yaml": "^2.8.2"
  }
}
